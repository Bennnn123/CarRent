@model IEnumerable<BCTwo.Models.MemberIndexView>

@{
    ViewBag.Title = "會員列表";
}
<div class="container">
    <h2 id="h1">會員資料列表</h2>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <a href="@Url.Content("~/Members/Create")"><i class="glyphicon glyphicon-plus-sign"></i></a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberID }, new { @class = "glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MemberID }, new { @class = "glyphicon glyphicon-info-sign" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberID }, new { @class = "glyphicon glyphicon-remove-sign" })

                </td>
            </tr>
        }

    </table>
</div>
@section styles{
    <style>
        #h1{
            text-align:center;
        }
    </style>
    
    
    }